<p>noticあとでいれる</p>
<div class="container">
  <div class="row">
    <div class="col-md-3">
     
      <h2>User info</h2>
      <%= image_tag @book.user.get_profile_image(100,100) %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @book.user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @book.user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <%= link_to edit_user_path(@user.id), class: 'btn btn-outline-secondary btn-block' do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
      </div>
    
      <h2 class="mt-3">New book</h2>
        <%= form_with model: @new_book do |f| %>
          <div class= "form-floating mb-3" >
            <label>Title</label>
              <%= f.text_field :title , class: 'form-control' %>
          </div>
          <div class= "form-floating mb-3">
            <label>Opinion</label>
              <%= f.text_area :body , class: 'form-control' %>
          </div>
          <%= f.submit 'Create Book', class: 'btn btn-success mb-3' %>
        <% end %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td><%= image_tag @book.user.get_profile_image(100,100) %><br>
                <%= @book.user.name %>
            </td>
            <td><%= @book.title %></td>
            <td><%= @book.body %></td>
            <% if @book.user == current_user %>
            <td>
              <%= link_to "Edit", edit_book_path(@book.id), class: 'btn btn-sm btn-success' %>
            </td>
            <td>
              <%= link_to "Destroy", book_path(@book.id), method: :delete, class: 'btn btn-sm btn-danger' %>
            </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
