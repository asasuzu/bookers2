<h1>Editing Book</h1>
<%= form_with model: @book do |f| %>
          <div class= "form-floating mb-3" >
            <label>Title</label>
              <%= f.text_field :title , class: 'form-control' %>
          </div>
          <div class= "form-floating mb-3">
            <label>Opinion</label>
              <%= f.text_area :body , class: 'form-control' %>
          </div>
          <%= f.submit 'Update Book', class: 'btn btn-success mb-3' %>
        <% end %>
